[user]
	name = Henrik Tudborg
	email = henrik@tudb.org
[color]
	diff = auto
	status = auto
	ui = true

[alias]
	st = status
	br = branch
	co = checkout
	df = diff
	lg = log -p
	pl = pull
	ps = push
	ci = commit --verbose
[core]
	excludesfile = /Users/tudborg/.gitignore_global
	[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[credential]
	helper = osxkeychain
[push]
	default = simple